<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs')%>
<body>
<%- include('partials/header.ejs')%>
   
   <div class="container-lg">  
      <div class="banner"></div>   
      <div class="list-menu"> 
         <label >Nuestra Linea de vinos </label>
         <!-- <select id="cepa" name="cepa"  class="custom-select-sm selectVariedades">
            <option selected>Todas las Variedades</option>
            <% for (let i=0; i<listaCepas.length ;i++){ %>
               <option value="<%= listaCepas[i].id %>"><%=listaCepas[i].name %></option>
            <% } %>
         </select> --> 
      </div> 
      
      <div class="row pt-2 m-0">
         <% for(i=0;i<products.length ;i++){ %> 
            <div class="col-md-auto">
               <div class="card shadow-sm mb-1">
                  <form class="agregarProducto"action="/cart/add/<%= products[i].id  %>" method="POST">
                     <a href="/products/detail/<%= products[i].id  %>"><img class=" rounded mx-auto mt-1 d-block" style="width: 6rem;"src="../images/upload/<%= products[i].image.path %>" alt=""></a>
                     <div class="card-body justify-content-center ">
                        <input name="nombre" value="<%= products[i].name  %>" hidden>
                        <input name="cepa" value="<%= products[i].cepas.name  %>" hidden>
                        <input name="price" value="<%= products[i].price %>" hidden>
                        <h5 class="card-title text-center" href="/products/detail/<%= products[i].id %>"><%= products[i].name  %></h5>
                        <p name="cepa" class="text-center"><strong>  <%= products[i].cepas.name  %> </strong></p>
                        <div class="card-text  text-center">
                           <small>Precio: </small>
                           <span class="price"> $ <%= products[i].price  %></span> <br>
                           
                           <div class=" d-flex justify-content-around mt-3" >
                              <a href="/products/detail/<%= products[i].id  %>"><button class="btn btn-outline-info"  type="button"> Ver Producto</button></a> 
                          
                           </div>
                           <% if( typeof usuarioLogueado != 'undefined'){ %>
                              <% if( usuarioLogueado.admin ==0 ){ %>
                           <small>Quiero</small>
                           <select id="cantidad" name="cantidad" class="form-control-sm mt-3">
                              <option value="1">1</option>
                              <option value="2">2</option>
                              <option value="3">3</option>
                              <option value="4">4</option>
                              <option value="5">5</option>
                              <option value="6">6</option>
                              <option value="7">7</option>
                              <option value="8">8</option>
                              <option value="9">9</option>
                              <option value="10">10</option>
                              <option value="11">11</option>
                              <option value="12">12</option>
                           </select> 
                           
                              <button id="buttonAdd" value="agregar" class="btn btn-success ml-1 buttonAdd" type="submit" > <i class="fas fa-cart-plus iAdd" size= "2px"></i> </button>
                              <% } %>
                              <% } %>   
                        </div>
                     </div>   
                  </form>
               </div>
            </div>
         <% } %>
      </div>
</div>

<%- include('partials/footer.ejs')%>
<script src="/js/validarCargaCart.js"></script>
</body>
</html>
